@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using Travel.Models;
@model List<ChuongTrinhTours>

@Html.Partial("_slidebanner")

<!-- Tour introduce -->
<section class="highlights no-margin" data-toggle="modal">
    <div class="container">
        <div class="row">
            <div class="col-md-12 content-title" style="top: 4px; left: 10px">
                <h4 class="title text-uppercase white text-bold"> TOUR TẾT </h4>
            </div>
        </div>

        <div class="high-slider">
            @foreach (var t in Model)
            {
                <div class="item">
                    <div class="row">
                        <div class="col-sm-4 text-center mt-40">
                            <div class="high-slider-img">
                                <a href="@Url.Action("ChiTietTour","Home", new { ma = @t.Matour})" title="xem chi tiết tour">
                                    <img src="~/Content/image/@t.Hinhanh" alt="" class="img-responsive">
                                </a>
                            </div>
                            <div class="box-infor-tour">
                                <div class="top-details">
                                    <a class="tour-tag" href="#">
                                        <span class="tag-detail overflow-ellipsis" title="Tour miền Tây">Tour miền Tây</span>
                                        <span class="number-detail">có 12 tour</span>
                                    </a>
                                </div>
                                <div class="name-tour-detail">
                                    <a href="#">
                                        @t.Tentour
                                    </a>
                                </div>
                                <!-- Dat session kiem tra dang nhap o day -->
                                @if (Session["KH"] != null)
                                {
                                    <a href="@Url.Action("ThemTourDat", "TourDaDat",  new { maTour = @t.Matour})" class="btn btn-buy-tour btn-orange" data-toggle="modal">
                                        Đặt Tour
                                    </a>
                                }
                                else
                                {
                                    <a id="btnBuy" class="btn btn-buy-tour btn-orange" data-toggle="modal" data-target="#Modal_Buy">
                                        Đặt Tour
                                    </a>
                                }
                            </div>

                            <div class="box-tour-price">
                                <p class="text"> Giá từ </p>
                                <p class="price"> @t.Gianguoilon </p>
                                <p class="info"> 3 ngày 2 đêm </p>
                            </div>
                            <div class="promotion-tour">
                                <div class="text-promotion-tour" title="Tour Tết">@t.Tenloai</div>
                            </div>
                        </div>
                    </div>
                </div>
            }

