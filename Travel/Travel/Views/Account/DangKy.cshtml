
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using Travel.Models;
@*@model User*@

<div class="member-wrapper">
    <div class="background register"></div>
    <div class="member-content">
        <div class="login clearfix register">
            <div class="loginbox register_user">
                <img src="~/Content/image/login.png" class="avatar">
                <h4 class="text-center title"> Đăng Ký </h4>
                <form id="login-form" action="@Url.Action("XL_DangKy","Account")" method="post">
                    <input type="hidden" name="_target_path" value="" />
                    <div class="form-content">
                        <div class="form-group label-top">
                            <input class="label-top" type="text" name="_username" value="" id="user_name" required data-validation="required email">
                            <label for="user_name"> Họ tên <label style="color:red"> (*) </label> </label>
                            <div class="bt"></div>
                        </div>
                        <div class="form-group label-top">
                            <input class="label-top" type="text" name="_userID" value="" id="_userID" required data-validation="required email">
                            <label for="user_name"> Tài khoản <label style="color:red"> (*) </label> </label>
                            <div class="bt"></div>
                            <span class="msg">@ViewData["TB_DK"]</span>
                        </div>
                        <div class="form-group label-top">
                            <input class="label-top" type="email" name="_email" value="" id="email" required data-validation="required email">
                            <label for="email"> Email <label style="color:red"> (*) </label></label>
                            <div class="bt"></div>
                        </div>
                        <div class="form-group label-top">
                            <input id="_password" class="label-top" type="password" name="_password" required data-validation="required">
                            <label for="login_password"> Mật khẩu <label style="color:red"> (*) </label></label>
                            <div class="bt"></div>
                        </div>
                        <div class="form-group label-top">
                            <input id="_confirmpassword" class="label-top" type="password" name="_confirmpassword" required data-validation="required" onkeypress="check()">
                            <label for="confirm_password"> Nhập lại mật khẩu <label style="color:red"> (*) </label></label>
                            <div class="bt"></div>
                            <span id="message"></span>
                        </div>
                        <br />
                        <div class="form-group label-top">
                            <input id="login_password" class="label-top" type="text" name="_phone">
                            <label for="phone"> Số điện thoại </label>
                            <div class="bt"></div>
                        </div>
                        <br />
                        <div class="form-group label-top">
                            <input id="login_password" class="label-top" type="text" name="_address">
                            <label for="address"> Địa chỉ </label>
                            <div class="bt"></div>
                        </div>
                    </div>
                    <div class="form-footer">
                        <a><input type="submit" name="btn_Register" value="Dăng ký" id="login" onkeyup="check()"></a>
                        <a href="@Url.Action("Index","Home")"><input type="button" name="btn_Cancel" value="Hủy"></a>
                    </div>
                    <div class="text-left">
                        <a href="@Url.Action("DangNhap","Account")"> Đã có tài khoản? </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/js/effect.js"></script>
@*<script src="~/Scripts/js/newyear.js"></script>*@

<!-- KT trùng MK -->
<script>
@**@    function check() {
        if ((document.getElementById('_password').value == null) || (document.getElementById('_confirmpassword').value == null)) {
            document.getElementById('message').innerHTML = "hợp lệ!";
        } else {
            document.getElementById('message').innerHTML = "giá trị không hợp lệ!";
        }
    }
</script>