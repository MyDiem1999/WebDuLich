@model IEnumerable<Travel.Models.DAT_TOUR>

@{
    ViewBag.Title = "HuyDatTour";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<h2>HỦY ĐẶT TOUR</h2>

<table class="table">
    <tr>
        <th>
            Mã Tour
        </th>
        <th>
            Mã Khách Hàng
        </th>
        <th>
            Giá Người Lớn
        </th>
        <th>
            Giá Trẻ Em
        </th>
        
        <th>
            Số Chỗ Người Lớn
        </th>
        <th>
            Số Chỗ Trẻ Em
        </th>
        <th>
            Ngày Đặt
        </th>
        <th>
            Phụ Thu
        </th>
        <th>
            Thành Tiền
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MA_TOUR)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MA_KH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GIA_NGUOI_LON)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GIA_TRE_EM)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.SO_NGAY)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.SO_CHO_NGUOI_LON)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SO_CHO_TRE_EM)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NGAY_DAT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PHU_THU)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.THANH_TIEN)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.TRANGTHAI)
        </td>*@
        <td>
            @Html.ActionLink("Hủy Đặt Tour", "XacNhanHuyDatTour", new { id=item.MA_DAT_TOUR })
        </td>
    </tr>
}

</table>
